pipeline {
    agent any

    stages {
        stage ('bereinige WS'){
            steps {
               sh 'rm -rf *'
            }
        }
        stage('Hole daten') {
            steps {
                sh 'git clone http://gitea-http:3000/gitea_admin/sandbox.git'
                sh 'cd sandbox; git switch main'
            }
        }
        stage ('manipuliere Daten') {
            steps {
                sh 'mkdir output'
                sh 'cp ./sandbox/data/organizations.csv ./output/'
            }
        }
        stage ('speichere in Datenbank') {
            steps {
                echo 'todo'
            }
        }
    }
}